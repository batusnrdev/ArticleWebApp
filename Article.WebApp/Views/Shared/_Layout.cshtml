@using Article.Utilities


@{

    @*if ((SessionManager)Session["SessionContext"] == null)
    {
        Response.Redirect("/login");
    }*@


    string FullName = ((SessionManager)Session["SessionContext"]).FullName;
    string Job = ((SessionManager)Session["SessionContext"]).Job;
    string imageUrl = ((SessionManager)Session["SessionContext"]).ImageUrl;

}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Article </title>
    <link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/codemirror/3.20.0/codemirror.css">
    <link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/codemirror/3.20.0/theme/monokai.css">
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/codemirror/3.20.0/codemirror.js"></script>
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/codemirror/3.20.0/mode/xml/xml.js"></script>
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/codemirror/2.36.0/formatting.js"></script>
    <script src="~/Content/summernote/summernote.js"></script>
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/admin/admin.css" rel="stylesheet" />
    <link href="~/Content/profile/profile.css" rel="stylesheet" />
    <link href="~/Content/profile/profile-content.css" rel="stylesheet" />
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/summernote/summernote.css" rel="stylesheet" />

</head>
<body>

    <div class="admin-content">
        <aside class="sm-side">
            <div class="user-head">
                <a class="admin-avatar" href="javascript:;">
                    <img style="width:64px; height:60px;" src="@imageUrl/60/60">
                </a>
                <div class="user-name">
                    <h5><a href="/Profile/Index">@FullName</a></h5>
                    <span><a href="#">@Job</a></span>
                </div>
                <a class="mail-dropdown pull-right" href="/Login/Logout">
                    <i class="fa fa-sign-out" style="font-size:20px; color:#000;"></i>
                </a>
            </div>
           <hr style="border-color:#ce1515;"/>
            <ul class="admin-nav admin-divider">
                <li>
                    <a href="/Profile"><i class="glyphicon glyphicon-user"></i>Profil</a>

                </li>

                <li>
                    <a href="/Post/Index"><i class="glyphicon glyphicon-book"></i>Makale Sayfası</a>

                </li>
                <li>
                    <a href="/Category/Index"><i class="glyphicon glyphicon-folder-open"></i>Kategori</a>
                </li>

                <li>
                    <a href="#"><i class="glyphicon glyphicon-sort-by-alphabet "></i>Yayında Olan Makaleler</a>
                </li>
                <li>
                    <a href="#"><i class="glyphicon glyphicon-dashboard "></i>İstatistikler</a>
                </li>
                <li>
                    <a href="#"><i class="glyphicon glyphicon-comment "></i>Yorumlar</a>
                </li>
                <li>
                    <a href="#"><i class="glyphicon glyphicon-comment "></i>Yorumlarım</a>
                </li>

                <li>
                    <a href="~/Site/Index"><i class="glyphicon glyphicon-certificate "></i>Anasayfa</a>
                </li>

            </ul>
            @*<ul class="nav nav-pills nav-stacked labels-info admin-divider">
                <li> <h4>Dashboard</h4> </li>
                <li> <a href="#"> <i class="glyphicon glyphicon-dashboard "></i> İstatistikler <span class="label label-primary pull-right">2</span> </a> </li>

            </ul>*@

        </aside>
        <aside class="lg-side">
            <div class="admin-head card-shadow">
                <a href="javascript:funcOpenCloseMenu();"><i class="fa fa-bars" style="font-size:25px;"></i></a>

                <h2 class="page-title">@RenderSection("pageTitle",false)</h2>
                @*<form action="#" class="pull-right position">
                    <div class="input-append">
                        <input type="text" class="sr-input" placeholder="Search Mail">
                        <button class="btn sr-btn" type="button"><i class="fa fa-search"></i></button>
                    </div>
                </form>*@
            </div>
            <div class="admin-body">
                @RenderBody()
            </div>
        </aside>
    </div>
    <script src="~/Content/summernote/summernote.min.js"></script>
    <script src="~/Scripts/Utility.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>

    
    <script>
        javascript: funcOpenCloseMenu();
        function funcOpenCloseMenu() {
            if ($(".sm-side")[0].style.display !== "none") {
                $(".sm-side").toggle("fast");
            }
            else {
                $(".sm-side").toggle("slow");
            }
        }
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
